@model MyCraftProjectSharingApp.Models.ViewModel
@using MyCraftProjectSharingApp.Models
@{
    ViewBag.Title = "ViewUserByUserId";
}

<h2>View Account</h2>
<br />

@if (Session["UserId"] != null)
{
    <table class="table" tableFormat>
        <tr>
            <th colspan="2" align="center">Account For: @Html.DisplayFor(m => m.SingleUser.Username)</th>
        </tr>
        <tr>
            <td>First Name</td>
            <td>@Html.DisplayFor(m => m.SingleUser.FirstName)</td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>@Html.DisplayFor(m => m.SingleUser.LastName)</td>
        </tr>
        <tr>
            <td>Age</td>
            <td>@Html.DisplayFor(m => m.SingleUser.Age)</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>@Html.DisplayFor(m => m.SingleUser.Gender)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.DisplayFor(m => m.SingleUser.Email)</td>
        </tr>
        <tr>
            <td>Username</td>
            <td>@Html.DisplayFor(m => m.SingleUser.Username)</td>
        </tr>
        <tr>
            <td>House</td>
            @if ((int)Session["H_Id"] == 1)
            {
                <td>Gryffindor</td>
            }
            @if ((int)Session["H_Id"] == 2)
            {
                <td>Slytherin</td>
            }
            @if ((int)Session["H_Id"] == 3)
            {
                <td>Ravenclaw</td>
            }
            @if ((int)Session["H_Id"] == 4)
            {
                <td>Hufflepuff</td>
            }
        </tr>
    </table>

    <br />
    <div>
        @Html.ActionLink("Edit Account", "UpdateUser", "Users", routeValues: new { UserId = (int)Session["UserId"] }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
        @Html.ActionLink("Delete Account", "DeleteUser", "Users", routeValues: new { UserId = (int)Session["UserId"] }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
    </div>
}
