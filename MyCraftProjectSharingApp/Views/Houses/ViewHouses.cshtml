@model MyCraftProjectSharingApp.Models.ViewModel
@using MyCraftProjectSharingApp.Models
@{
    ViewBag.Title = "ViewHouses";
}
<div class="text-center">
    <h2>House Hourglasses</h2>
</div>
<br />
<img src="http://i1039.photobucket.com/albums/a480/HogwartsMW/Foro%20General/Relojes-Peq.gif" />
<br />

<table class="table" tableFormat>
    @foreach (Houses house in Model.Houses)
    {
        <tr>
            <th>@Html.DisplayFor(m => house.HouseName)</th>
            <th>Points</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(m => house.Motto)</td>
            <td>@Html.DisplayFor(m => house.Points)</td>
        </tr>
    }
</table>
